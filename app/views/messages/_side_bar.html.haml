
.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icons
        = link_to new_group_path, method: :get, class: "link" do
          = icon('far','edit', class: 'edit')
        = link_to edit_user_path(current_user), class: "link" do
          = icon('fas','cog', class: 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group), class: "link" do
          .group__name
            = group.name
          .group__message
            = group.show_last_message